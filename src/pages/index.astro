---
import AppLayout from '../layouts/AppLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<style>
  #title {
    text-transform: uppercase; 
    letter-spacing: 1.5rem; 
    font-size: 6rem;
  }

  #subtitle {
    text-transform: uppercase; 
    font-weight: 400; 
    letter-spacing: 1.7rem;
  }

  @media (max-width: 768px) { 
    #title {
      text-transform: uppercase; 
      letter-spacing: initial; 
      font-size: 3rem;
    }

    #subtitle {
      text-transform: uppercase; 
      font-weight: 400; 
      font-size: 1.5rem;
      letter-spacing: initial;
    }
  }
</style>

<AppLayout title="Prasanta Communications" description="We are a technology startup building Internet-powered products.">
  <div class="text-center">
    <img src="/prasanta-communications.png" alt="insidert" width="128" height="128">
    <h1 class="mb-0 mt-0" id="title">Prasanta</h1>
    <h2 class="mt-0" id="subtitle">Communications</h2>

    <!-- <div>
