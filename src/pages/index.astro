<style>
  #title {
    text-transform: uppercase; 
    letter-spacing: 1.5rem; 
    font-size: 6rem;
  }

  #subtitle {
    text-transform: uppercase; 
    font-weight: 400; 
    letter-spacing: 1.7rem;
  }

  @media (max-width: 768px) { 
    #title {
      text-transform: uppercase; 
      letter-spacing: initial; 
      font-size: 3rem;
    }

    #subtitle {
      text-transform: uppercase; 
      font-weight: 400; 
      font-size: 1.5rem;
      letter-spacing: initial;
    }
  }
</style>

